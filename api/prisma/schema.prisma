generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Category {
  FOOD 
  CLOTHING
  FURNITURE
  BOOKS
  HOUSEHOLD
}

enum DonationStatus {
  PENDING
  ACCEPTED
  RETRIEVED
  CANCELLED
}

model User {
  id      String    @id @map("_id") @default(uuid()) 
  name    String
  email   String @unique
  password String 

  donations         Donation[] @relation("donors")  
  retrievedDonations Donation[] @relation("recipients") 

  createdAt DateTime  @default(now())
  updatedAt DateTime
  deletedAt DateTime?
}

model Donation {
  id          String   @id @map("_id") @default(uuid()) 
  title       String 
  description String
  category    Category
  donorId     String
  recipientId String?
  status      DonationStatus

  createdAt DateTime  @default(now())
  updatedAt DateTime
  deletedAt DateTime?

  donor     User  @relation("donors", fields: [donorId], references: [id])
  recipient User? @relation("recipients", fields: [recipientId], references: [id])
}

